<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@drawable/cloud">

    <ImageView
        android:id="@+id/collectPointBall5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/basketball"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="172dp" />

    <ImageView
        android:id="@+id/collectPointBall3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/basketball"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="458dp" />

    <ImageView
        android:id="@+id/CollectPointBall"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/basketball"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="315dp" />

    <ImageView
        android:id="@+id/collectPointBall4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/basketball"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="29dp" />

    <ImageView
        android:id="@+id/RedBall"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/redbasketball"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="45dp" />

    <ImageView
        android:id="@+id/greenBall"
        android:layout_width="117dp"
        android:layout_height="111dp"
        app:srcCompat="@drawable/greenball"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="315dp" />

    <TextView
        android:id="@+id/Points"
        android:layout_width="118dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:text=" 0"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <ImageView
        android:id="@+id/BlueBall"
        android:layout_width="101dp"
        android:layout_height="113dp"
        app:srcCompat="@drawable/blueball"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="29dp" />

    <ImageView
        android:id="@+id/heartImageView"
        android:layout_width="35dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/lifeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:text="2"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/heartImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pauseImage"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="pauseGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pause"
        />

    <ImageView
        android:id="@+id/RedBall2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/redbasketball"
        tools:layout_editor_absoluteX="250dp"
        tools:layout_editor_absoluteY="200dp"
        tools:ignore="MissingConstraints"
        />



</androidx.constraintlayout.widget.ConstraintLayout>